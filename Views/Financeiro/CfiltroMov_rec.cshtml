@model IEnumerable<ControleDespesa5.Models.MovimentosDR>
@{
    ViewData["Title"] = "CfiltroMov_rec";
}

<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <form class="row row-cols-lg-auto g-3 align-items-center" asp-action="CfiltroMov_rec" method="get">
        <div class="col-2">
            <label class="visually-hidden" for="inlineFormInputGroupUsername">Descrição da Despesa</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="search" class="form-control" name="PesquisaDespesa" placeholder="Digite a descrição da despesa" value="@ViewData["CfiltroMov_rec"]" >
            </div>
        </div>


        <div class="col-2">
            <label class="visually-hidden" for="inlineFormSelectPref">Preference</label>
            <select class="form-select" id="inlineFormSelectPref">
                @foreach (var item in ViewBag.ltdesp)
                {
                    <option value="@item.Id">  @item.Despesa </option>

                }
            </select>
        </div>

        <div class="col-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="inlineFormCheck">
                <label class="form-check-label" for="inlineFormCheck">
                    Remember me
                </label>
            </div>
        </div>

        <div class="col-2">
            <button type="submit" value="CfiltroMov_rec" class="btn btn-primary" >Consultar</button>
            <a asp-action="CfiltroMov_rec"></a>
        </div>

        <div class="col-12">

            @foreach (var item in ViewBag.ltdesp)
            {
                <ol class="list-group list-group-numbered">
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@item.desc_despesa</div>
                            @item.data_MovimentosDR
                        </div>
                        <span class="badge bg-primary rounded-pill">@item.valor_des</span>
                    </li>
                </ol>

            }
        </div>
    </form>

</body>
</html>