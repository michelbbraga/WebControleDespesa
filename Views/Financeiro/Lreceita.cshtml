@model ControleDespesa5.Models.Receita;
@{
    ViewData["Title"] = "Cria_Receita";
}

<head>
    <meta charset="utf-8" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title></title>
</head>
<body>
    <form class="row g-3" asp-action="Cria_Receita">
        <div class="col-md-4">
            <label for="inputState" class="form-label">Ja Cadastrados</label>
            <select id="inputState" class="form-select">
                @foreach (var item in ViewBag.lreceita)
                {
                    <option selected> @item.nomereceita</option>
                }

                <option>...</option>
            </select>
        </div>
        <div class="col-12">
            <label for="inputAddress2" class="form-label">Nova Recieta</label>
            <input type="text" class="form-control" asp-for="nomereceita">
            <span asp-validation-for="nomereceita" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button type="submit" value="Cria_Receita" class="btn btn-primary">Salvar</button>
        </div>
    </form>

</body>
</html>